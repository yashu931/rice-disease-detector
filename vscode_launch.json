{
  // Use this launch config in VS Code to run the Flask app
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Flask App",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {"FLASK_APP": "app.py", "FLASK_ENV": "development"},
      "args": ["run", "--no-debugger"],
      "jinja": true
    }
  ]
}
